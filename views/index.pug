extends layout
 
block content
 
  nav.navbar.justify-content-between.navbar-expand-md.navbar-dark.bg-dark
    .logo
      img.ml-2(src='/images/logo1.png',width="90px")
      a.navbar-brand.ml-4(href='/') Sistema de reservas
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarCollapse.collapse.navbar-collapse.flex-grow-0
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(data-toggle='modal',href='javascript:void(0)', onclick='openLoginModal();') Iniciar Sesion
        li.nav-item
          a.nav-link(data-toggle='modal', href='javascript:void(0)', onclick='openRegisterModal();') Registrarse

    #loginModal.modal.fade.login
      .modal-dialog.login.animated
        .modal-content
          .modal-header
            h4.modal-title Iniciar Sesion
            button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
          .modal-body
            .box
              .content
                .division
                .form.loginBox
                  form(method='', action='', accept-charset='UTF-8')
                    input#email.form-control(type='text', placeholder='Email', name='email')
                    input#password.form-control(type='password', placeholder='Password', name='password')
                    input.btn.btn-default.btn-login(type='button', value='Login', onclick='loginAjax()')
            .box
              .content.registerBox(style='display:none;')
                .form
                  form(method='', html='{:multipart=>true}', data-remote='true', action='', accept-charset='UTF-8')
                    input#email.form-control(type='text', placeholder='Email', name='email')
                    input#password.form-control(type='password', placeholder='Password', name='password')
                    input#password_confirmation.form-control(type='password', placeholder='Repeat Password', name='password_confirmation')
                    input.btn.btn-default.btn-register(type='button', value='Create account', name='commit')
          .modal-footer
            .forgot.login-footer
              span
                | &iquest;Buscando 
                a(href='javascript: showRegisterForm();') crear una cuenta
                |                             ?
            .forgot.register-footer(style='display:none')
              span Ya tienes una cuenta? 
              a(href='javascript: showLoginForm();') Login
  #wrapper.d-flex
    #sidebar-wrapper.bg-light.border-right
      .sidebar-heading Ajustes de busqueda
      .list-group.list-group-flush
          .form-group.list-group-item
            label(for='visualizacion') Visualizar por:
            br
            input(type='radio', name='radio1', value='Mes')
            |  Mes
            br
            input(type='radio', name='radio1', value='Semana')
            |  Semana
            br
            input(type='radio', name='radio1', value='Dia')
            |  Dia
          .form-group.list-group-item.bg-grey.search-container
            label(for='search') Filtrar busqueda:
            input(type='text', placeholder='Search..', name='search')
            button(type='submit')
              i.fa.fa-search
    #page-content-wrapper
      .container-fluid
        .navbar-nav.flex-row
          button.mybtn.navbar-toggler.toggler-example(type='button', data-toggle='collapse', data-target='#navbarSupportedContent1', aria-controls='navbarSupportedContent1', aria-expanded='false', aria-label='Toggle navigation')
            span.dark-blue-text
              i.fas.fa-bars.fa-1x
              i.hide-sidebar.fas.fa-times
        #calendar
          