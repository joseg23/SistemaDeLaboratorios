doctype html
head
  title Login/Register Modal by Creative Tim
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  style.
    body{padding-top: 60px;}
  link(href='assets/css/bootstrap.css', rel='stylesheet')
  link(href='assets/css/login-register.css', rel='stylesheet')
  link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css')
  script(src='assets/js/jquery-1.10.2.js', type='text/javascript')
  script(src='assets/js/bootstrap.js', type='text/javascript')
  script(src='assets/js/login-register.js', type='text/javascript')
.container
  .row
    .col-sm-4
    .col-sm-4
      a.btn.big-login(data-toggle='modal', href='javascript:void(0)', onclick='openLoginModal();') Log in
      a.btn.big-register(data-toggle='modal', href='javascript:void(0)', onclick='openRegisterModal();') Register
    .col-sm-4
  #loginModal.modal.fade.login
    .modal-dialog.login.animated
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
          h4.modal-title Iniciar Sesion
        .modal-body
          .box
            .content
              .division
                .line.l
                span
                .line.r
              .error
              .form.loginBox
                form(method='', action='', accept-charset='UTF-8')
                  input#email.form-control(type='text', placeholder='Email', name='email')
                  input#password.form-control(type='password', placeholder='Password', name='password')
                  input.btn.btn-default.btn-login(type='button', value='Login', onclick='loginAjax()')
          .box
            .content.registerBox(style='display:none;')
              .form
                form(method='', html='{:multipart=>true}', data-remote='true', action='', accept-charset='UTF-8')
                  input#email.form-control(type='text', placeholder='Email', name='email')
                  input#password.form-control(type='password', placeholder='Password', name='password')
                  input#password_confirmation.form-control(type='password', placeholder='Repeat Password', name='password_confirmation')
                  input.btn.btn-default.btn-register(type='button', value='Create account', name='commit')
        .modal-footer
          .forgot.login-footer
            span
              | &iquest;Buscando
              a(href='javascript: showRegisterForm();') crear una cuenta
              |                             ?
          .forgot.register-footer(style='display:none')
            span Crear Cuenta
            a(href='javascript: showLoginForm();') Login
script(type='text/javascript').
  $(document).ready(function(){
  openLoginModal();
  });
